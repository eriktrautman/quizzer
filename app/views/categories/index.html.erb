<h1>Categories</h1>

<div class="new-something-link">
  <%= link_to "New Category", new_category_path %>
</div>

<div id="categories-list">

  <ul>
    <% @categories.each do |cat| %>
      <%= link_to edit_category_path(cat) do %>
        <li><%= cat.name %></li>
      <% end %>
    <% end %>
  </ul>

</div>
