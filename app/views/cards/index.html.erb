<h1>Cards</h1>

<%= link_to new_card_path do%>
  <div class="new-something-link">
    New Card
  </div>
<% end %>

<div id="cards-list">

  <ul>
    <% @categories.each do |cat| %>
      <li><%= link_to cat.name, edit_category_path(cat), :class => "category" %>
        <ul>
          <% cat.cards.each do |card| %>
            <%= link_to edit_card_path(card) do %>
              <li><%= card.title %></li>
            <% end %>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>

</div>
